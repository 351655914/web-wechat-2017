/**app.wxss**/
@import "weui.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;}

.page_header {
  text-align: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}

.page_header_text {
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 40rpx;
}

.page_body{
  display: flex;
  flex:1;
  flex-direction: column;
}

.items{
  display: flex;
  padding:20rpx;
  border-bottom: 2rpx solid #eee ;

}

.items .img{
  width:128rpx;
  height:128rpx;
  margin-right:1px;
}

.meta{
  flex: 1;
  margin-left: 10px;
  direction: center;
}

.movie_name{
  font-size: 18px;
}

.original_title{
  font-size: 13px;
  color:#c0c0c0;
}

.directors{
  font-size: 14px;
  color: #999;
}

.rating{
  flex-basis: 30%;
  text-align: right;
  margin-right: 20px;
  font-size: 20px;
  color:red;
}
